{% extends 'base.html.twig' %}

{% block title %}Mise à jour de son utilisateur{% endblock %}

{% block body %}
    <h1>{{ block('title') }}</h1>

    {{ form_start(updateUser) }}
    {{ form_row(updateUser.email) }}
    {{ form_row(updateUser.plainPassword, {
        label: 'Password'
    }) }}

    <button type="submit" class="btn">Mise à jour</button>
    {{ form_end(updateUser) }}
{% endblock %}
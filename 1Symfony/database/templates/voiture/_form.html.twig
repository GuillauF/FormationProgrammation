{{ form_start(form) }}
    {{ form_widget(form) }}
    {# VÃ©rifier si la route est "voiture_edit" on affiche les images #}
    {% if app.request.attributes.get('_route') == 'voiture_edit' %}
        <h2>Images</h2>
        {% for image in voiture.images %}
            <div>
                <img src="{{ ('/uploads/' ~ image.nom) }}" alt="Image" width="300">
                <a href="{{ path('voiture_delete_image', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}">Supprimer</a>
            </div>
        {% endfor %}
    {% endif %}
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}